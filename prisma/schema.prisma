generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model news {
  id        Int      @id @default(autoincrement())
  author    String
  content   String   @db.Text
  slug      String   @unique(map: "slug")
  title     String
  site      String
  views     Int
  disabled  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at") @db.DateTime(0)
  userId    Int
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId], map: "news_userId_fkey")
}

model popup {
  id        Int      @id @default(autoincrement())
  title     String
  link      String   @default("")
  image     String
  width     Int
  height    Int
  placement String
  site      String
  margin    String   @default("0-0-0-0")
  disabled  Boolean  @default(false)
  startDate DateTime @default(now()) @map("start_date") @db.DateTime(0)
  endDate   DateTime @default(now()) @map("end_date") @db.DateTime(0)
  userId    Int
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId], map: "popup_userId_fkey")
}

model partner {
  id       Int      @id @default(autoincrement())
  title    String
  link     String?  @default("")
  image    String
  disabled Boolean  @default(false)
  date     DateTime @default(now()) @db.DateTime(0)
  userId   Int
  user     users    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId], map: "partner_userId_fkey")
}

model users {
  id        Int       @id @unique(map: "id_UNIQUE")
  count     Int
  email     String    @db.VarChar(100)
  lastLog   DateTime  @map("last_log") @db.DateTime(0)
  name      String    @db.VarChar(100)
  password  String    @db.VarChar(100)
  username  String    @db.VarChar(100)
  site      String?   @db.VarChar(100)
  role      String?   @db.VarChar(100)
  createdAt DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  news      news[]
  partner   partner[]
  popup     popup[]
}
